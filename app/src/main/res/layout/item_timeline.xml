<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivFeel"
            app:layout_constraintTop_toTopOf="@+id/tvContents" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="@+id/tvDate"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvContents" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/ivFeel"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tvDate"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorTextSub"
            app:layout_constraintVertical_chainStyle="packed" android:textSize="14sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            app:layout_constraintTop_toBottomOf="@+id/tvContents" app:layout_constraintEnd_toEndOf="@+id/tvContents"
            app:layout_constraintStart_toStartOf="@+id/tvContents" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:gravity="right|center_vertical"
            android:layout_marginBottom="24dp"
            android:textSize="12sp"
            android:textColor="@color/colorTextDim" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>